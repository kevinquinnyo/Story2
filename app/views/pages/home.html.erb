


<% content_for :header do %>
  <span class="logo colorblue">INSERT LOGO HERE</span>
<% end %>

<% content_for :top do %>
  <%= render 'layouts/map' %>
<% end %>

<% content_for :left do %>
  <h1>A list of stories goes here, in order of user votes</h1>

  <% @places.each do |place| %>
    <% @stories.each do |story| %>
      <%= link_to story.title, place_story_path(:place_id => place.id, :id => story.id) %></br>
    <% end %>
  <% end %>
  
<% end %>

<% content_for :right do %>
  <h1>If you select a story, you read it here.</h1>

    
<% end %>
