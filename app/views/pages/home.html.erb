<% content_for :top do %>
  <%= render 'layouts/map' %>
<% end %>

<% content_for :left do %>
  <h1>Best Stories Right Now</h1>

  <% @stories.each do |story| %>
    <%= link_to story.title, story_path(story) %>
    <br />
  <% end %>
  
  <h1>Popular Places</h1>
  
  <% @places.each do |place| %>
    <%= link_to_function place.name, "panMapTo(#{place.lat}, #{place.lng});" %>
    <br />
  <% end %>
  
<% end %>

<% content_for :right do %>
<div class="grid_3 push_3 newstorybutton">
  <%= link_to "Tell Your Story!", new_story_path, :class => "bigwhitelink" %>
</div>
<% end %>
